---
import { ClientRouter } from 'astro:transitions'
import { siteInfo } from 'src/consts/siteInfo'
import '../styles/global.css'
import Navbar from '@components/shared/Navbar.astro'

interface Props {
  title?: string
  image?: string
  description?: string
}

const {
  title = siteInfo.title,
  description = siteInfo.description,
  image,
} = Astro.props
---

<html lang='en'>
  <head>
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width' />
    <!-- SEO -->
    <meta name='description' content={description} />
    <meta name='author' content='Jeremy Orellana' />
    <!-- Open Graph -->
    <meta property='og:title' content={title} />
    <meta property='og:description' content={description} />
    <meta property='og:url' content='https://your-site-url.com' />
    <meta property='og:type' content='website' />
    <meta property='og:site_name' content='Pokémon Website' />
    <meta property='og:image' content={image} />

    <!-- Twitter Card -->
    <meta name='twitter:card' content='summary_large_image' />
    <meta
      name='twitter:title'
      content='Pokémon Website — Browse & Bookmark Your Favorites'
    />
    <meta
      name='twitter:description'
      content='A fast and responsive Pokémon app built with Astro, Tailwind CSS, and Solid.js. Explore live Pokémon data from PokeAPI, paginate easily, and bookmark favorites.'
    />
    <meta name='twitter:image' content={image} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class='bg-slate-800 text-slate-100 flex flex-col min-h-screen'>
    <Navbar />
    <main class='mt-10 mx-auto grow w-full max-w-3xl px-4'>
      <slot />
    </main>
  </body>
</html>
