---
interface Props {
  name: string
  url: string
  isBig?: boolean
}

const { name, url, isBig } = Astro.props

const pokemonId = url.split('/').at(-2)

const imageSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${pokemonId}.png`
---

<a
  class:list={[
    'rounded flex flex-col justify-center items-center p-2',
    {
      border: !isBig,
    },
  ]}
  href={`/pokemons/${name}`}
>
  <img transition:name={`${name}-image`} src={imageSrc} alt={name} />
  <span
    class:list={[
      'capitalize',
      {
        'text-3xl text-blue-300 mb-2': isBig,
      },
    ]}
    class='capitalize'>#{pokemonId} {name}</span
  >
</a>
